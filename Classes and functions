class Product:
    def __init__(self, name, owner):
        self.name = name
        self.owner = owner

    def display_info(self):
        print(f"{self.name} ({self.brand}) - Owned by: {self.owner}")

class Food(Product):
    def __init__(self, name, owner, expiration_date):
        super().__init__(name, owner)
        self.expiration_date = expiration_date

    def display_info(self):
        super().display_info()
        print(f"Expiration Date: {self.expiration_date}")


class dairy(Product):
    def __init__(self, name, owner):
        super().__init__(name, brand, owner)
  

class SmartFridge:
    def __init__(self):
        self.products = []

    def add_product(self, product):
        self.products.append(product)

    def display_contents(self):
        print("Smart Fridge Contents:")
        for product in self.products:
            product.display_info()

    def check_ownership(self, owner):
        owned_products = [product for product in self.products if product.owner == owner]
        if not owned_products:
            print(f"{owner} does not own any products in the fridge.")
        else:
            print(f"{owner}'s Products in the Fridge:")
            for product in owned_products:
                print(f"- {product.name} ({product.brand})")

